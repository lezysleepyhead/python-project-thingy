name = input("What is your name?")
print("Hello" + name)

age = input("What is your age?")
age_in_days = int(age) * 365
print("You are " + age + " years old. Your life span might be " + str(age_in_days) + " days!")

place = input("Where do you live?")
print("Answer this question or die")
    
choice = input("Do you like creepypastas? Yes or No")

if choice == "Yes":
  print("Good, you have chosen to live...")
      
if choice == "No":
  print("Watch your door at midnight tonight... you have chosen DEATH")
  
print("Thank you for making your choice of life and death...")
